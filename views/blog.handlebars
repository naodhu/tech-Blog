<div class="text mb-4">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p class="text-muted">Created by <strong>{{user.username}}</strong> on {{format_date date_created}}</p> 
</div>
<div>
  {{#if logged_in}}
  <form class="new-comment-form" data-blogid={{id}}>
    <div class="form-group">
      <textarea class="form-control ml-5" id='comment_description' name="comment-body" rows="3"></textarea>
    </div>
    <div>
      <button class="btn btn-warning ml-5 mb-5" type="submit">Add Comment</button>
    </div>
  </form>
  {{/if}}
</div>
{{#each comments as |comment|}}
  <div class="border p-3 mb-3 rounded">
    <p>{{comment.comment_description}}</p>
  </div>
{{/each}}
