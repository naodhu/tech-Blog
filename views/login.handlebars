<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="font-weight-bold mb-4">Login</h2>

    <form class="login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-control" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary w-100 mb-2" type="submit">Login</button>
        <p class="text-center">
          <a href="/signup">Or Sign Up!</a>
        </p>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
