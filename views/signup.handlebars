<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="font-weight-bold mb-4">Signup</h2>

    <form class="signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-control" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary signup-form w-100" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>
